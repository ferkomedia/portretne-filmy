    max-width: 700px;
    margin: 0 auto;
  }
  .articleContent h2 {
    font-size: clamp(1.5rem, 3vw, 2rem);
    margin-bottom: 1.5rem;
  }
  .articleContent p {
    font-size: 1.05rem;
    line-height: 1.8;
    color: rgba(255,255,255,0.8);
    margin-bottom: 1.25rem;
  }
  .articleContent strong {
    color: #f97316;
  }

  /* Section */
