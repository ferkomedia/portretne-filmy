    margin-bottom: 1rem;
  }
  .featureCard h3 {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
  }
  .featureCard p {
    color: rgba(255,255,255,0.7);
    font-size: 0.95rem;
    line-height: 1.6;
  }

  /* Process Timeline */
