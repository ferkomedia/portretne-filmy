    max-width: 700px;
    margin: 0 auto;
  }
  .timelineItem {
    display: flex;
    gap: 2rem;
    margin-bottom: 2.5rem;
    position: relative;
  }
  .timelineItem:not(:last-child)::after {
    content: "";
    position: absolute;
    left: 24px;
    top: 55px;
    bottom: -2.5rem;
    width: 2px;
    background: rgba(249,115,22,0.3);
  }
  .timelineNumber {
