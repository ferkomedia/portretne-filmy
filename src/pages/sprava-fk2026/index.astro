  <script>
    const adminPassword = "MyFilmy2026@";

    // Tab switching
    document.querySelectorAll('.adminTab').forEach(tab => {
      tab.addEventListener('click', function() {
        document.querySelectorAll('.adminTab').forEach(t => t.classList.remove('active'));
        document.querySelectorAll('.tabContent').forEach(c => c.classList.remove('active'));
        this.classList.add('active');
        document.getElementById('tab-' + this.dataset.tab).classList.add('active');
        if (this.dataset.tab === 'email') loadEmailStats();
      });
    });

    // Sub-tab switching
    document.querySelectorAll('.subTab').forEach(tab => {
      tab.addEventListener('click', function() {
        document.querySelectorAll('.subTab').forEach(t => t.classList.remove('active'));
        document.querySelectorAll('.subTabContent').forEach(c => c.classList.remove('active'));
        this.classList.add('active');
        document.getElementById('subtab-' + this.dataset.subtab).classList.add('active');
      });
    });

    // Workshop JSON generator
    document.getElementById('addTermForm').addEventListener('submit', function(e) {
      e.preventDefault();
      const term = {
        title: document.getElementById('title').value,
        date: document.getElementById('date').value,
        city: document.getElementById('city').value,
        price: parseInt(document.getElementById('price').value),
        capacity: parseInt(document.getElementById('capacity').value),
        status: document.getElementById('status').value
      };
      document.getElementById('jsonCode').textContent = JSON.stringify(term, null, 2);
      document.getElementById('jsonOutput').style.display = 'block';
    });

    // Invoice loading
    let currentOffset = 0;
    const limit = 50;
    let allInvoices = [];

    document.getElementById('loadInvoices').addEventListener('click', loadInvoices);

    async function loadInvoices(append = false) {
      const btn = document.getElementById('loadInvoices');
      btn.disabled = true;
      btn.textContent = 'Naƒç√≠tavam...';

      try {
        const apiKey = prompt('Zadajte admin kƒæ√∫ƒç:', 'fk2026-admin');
        if (!apiKey) {
          btn.disabled = false;
          btn.textContent = 'Naƒç√≠ta≈• fakt√∫ry';
          return;
        }

        const response = await fetch(`/api/get-invoices?key=${encodeURIComponent(apiKey)}&limit=${limit}&offset=${currentOffset}`);
        const data = await response.json();

        if (data.error) {
          alert('Chyba: ' + data.error);
          btn.disabled = false;
          btn.textContent = 'Naƒç√≠ta≈• fakt√∫ry';
          return;
        }

        if (data.stats) {
          document.getElementById('statTotal').textContent = data.stats.totalInvoices || 0;
          document.getElementById('statRevenue').textContent = (data.stats.totalRevenue || 0).toLocaleString('sk-SK') + ' ‚Ç¨';
          document.getElementById('statMonthCount').textContent = data.stats.monthlyCount || 0;
          document.getElementById('statMonthRevenue').textContent = (data.stats.monthlyRevenue || 0).toLocaleString('sk-SK') + ' ‚Ç¨';
        }

        allInvoices = data.invoices || [];
        renderInvoices(allInvoices);

      } catch (err) {
        alert('Chyba pri naƒç√≠tan√≠: ' + err.message);
      }

      btn.disabled = false;
      btn.textContent = 'Naƒç√≠ta≈• fakt√∫ry';
    }

    function renderInvoices(invoices) {
      const tbody = document.getElementById('invoiceTableBody');

      if (!invoices || invoices.length === 0) {
        tbody.innerHTML = '<tr><td colspan="7" class="emptyState">≈Ωiadne fakt√∫ry</td></tr>';
        return;
      }

      tbody.innerHTML = invoices.map(inv => `
        <tr>
          <td><strong>${inv.id}</strong></td>
          <td>${new Date(inv.createdAt).toLocaleDateString('sk-SK')}</td>
          <td>
            <div>${inv.customerName}</div>
            <div class="subtext">${inv.customerEmail}</div>
          </td>
          <td>
            ${inv.companyName ? `<div>${inv.companyName}</div><div class="subtext">IƒåO: ${inv.companyIco}</div>` : '<span class="subtext">FO</span>'}
          </td>
          <td>${inv.productName}</td>
          <td class="amount">${inv.amount.toLocaleString('sk-SK', { minimumFractionDigits: 2 })} ‚Ç¨</td>
          <td><span class="badge badge--success">Uhraden√°</span></td>
        </tr>
      `).join('');
    }

    // Email Marketing
    async function loadEmailStats() {
      try {
        const response = await fetch('/api/contacts/stats', {
          headers: { 'Authorization': `Bearer ${adminPassword}` }
        });
        const data = await response.json();

        if (data.ok) {
          document.getElementById('emailStatTotal').textContent = data.total || 0;
          document.getElementById('emailStatWorkshops').textContent = data.workshop || 0;
          document.getElementById('emailStatContact').textContent = data.kontakt || 0;
          document.getElementById('emailStatCampaigns').textContent = data.campaigns || 0;
        }
      } catch (err) {
        console.error('Error loading email stats:', err);
      }
    }

    document.getElementById('loadContacts')?.addEventListener('click', async function() {
      const btn = this;
      btn.disabled = true;
      btn.textContent = 'Naƒç√≠tavam...';

      try {
        const response = await fetch('/api/contacts/list', {
          headers: { 'Authorization': `Bearer ${adminPassword}` }
        });
        const data = await response.json();

        if (data.contacts) {
          const tbody = document.getElementById('contactsTableBody');
          tbody.innerHTML = data.contacts.map(c => `
            <tr>
              <td><input type="checkbox" /></td>
              <td>${c.name || '-'}</td>
              <td>${c.email}</td>
              <td>${c.source}</td>
              <td>${new Date(c.createdAt).toLocaleDateString('sk-SK')}</td>
              <td><button class="btn btn--ghost btn--small">Vymaza≈•</button></td>
            </tr>
          `).join('');
        }
      } catch (err) {
        console.error(err);
      }

      btn.disabled = false;
      btn.textContent = 'Naƒç√≠ta≈• kontakty';
    });

    document.getElementById('exportContacts')?.addEventListener('click', function() {
      alert('Export CSV - funkcionalita v pr√≠prave');
    });

    // Social Media
    const socialPostText = document.getElementById('socialPostText');
    if (socialPostText) {
      socialPostText.addEventListener('input', function() {
        const text = this.value || 'Tvoj text sa zobraz√≠ tu...';
        document.getElementById('socialPreviewText').textContent = text;
        document.getElementById('socialCharCount').textContent = this.value.length;
      });
    }

    document.querySelectorAll('.platformBtn input').forEach(cb => {
      cb.addEventListener('change', function() {
        this.closest('.platformBtn').classList.toggle('selected', this.checked);
      });
    });

    document.querySelectorAll('input[name="scheduleType"]').forEach(radio => {
      radio.addEventListener('change', function() {
        document.getElementById('socialScheduleTime').disabled = this.value !== 'schedule';
      });
    });

    document.getElementById('socialMediaUpload')?.addEventListener('change', function(e) {
      const file = e.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = function(event) {
          document.getElementById('socialMediaPreview').innerHTML = `<img src="${event.target.result}" style="max-width:200px; border-radius:8px; margin-top:0.5rem;" />`;
          document.getElementById('socialPreviewImage').innerHTML = `<img src="${event.target.result}" style="width:100%; border-radius:8px; margin:1rem 0;" />`;
        };
        reader.readAsDataURL(file);
      }
    });

    document.getElementById('publishSocialBtn')?.addEventListener('click', function() {
      const platforms = Array.from(document.querySelectorAll('.platformBtn input:checked')).map(cb => cb.value);
      const text = socialPostText?.value;

      if (platforms.length === 0) return alert('Vyber platformu!');
      if (!text?.trim()) return alert('Nap√≠≈° text!');

      const scheduleType = document.querySelector('input[name="scheduleType"]:checked')?.value;
      alert(scheduleType === 'now' ? 'Publikujem...' : 'Napl√°novane!');
    });

    document.getElementById('saveSocialDraftBtn')?.addEventListener('click', function() {
