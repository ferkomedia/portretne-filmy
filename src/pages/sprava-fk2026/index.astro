    // Invoices
    document.getElementById('loadInvoices')?.addEventListener('click', async function() {
      const btn = this;
      btn.disabled = true;
      btn.textContent = 'Naƒç√≠tavam...';

      try {
        const key = prompt('Admin kƒæ√∫ƒç:', 'fk2026-admin');
        if (!key) return;

        const res = await fetch(`/api/get-invoices?key=${key}&limit=50`);
        const data = await res.json();

        if (data.stats) {
          document.getElementById('statTotal').textContent = data.stats.totalInvoices || 0;
          document.getElementById('statRevenue').textContent = (data.stats.totalRevenue || 0).toLocaleString('sk-SK') + ' ‚Ç¨';
          document.getElementById('statMonthCount').textContent = data.stats.monthlyCount || 0;
          document.getElementById('statMonthRevenue').textContent = (data.stats.monthlyRevenue || 0).toLocaleString('sk-SK') + ' ‚Ç¨';
        }

        if (data.invoices) {
          const tbody = document.getElementById('invoiceTableBody');
          tbody.innerHTML = data.invoices.map(inv => `
            <tr>
              <td><strong>${inv.id}</strong></td>
              <td>${new Date(inv.createdAt).toLocaleDateString('sk-SK')}</td>
              <td>${inv.customerName}</td>
              <td class="amount">${inv.amount.toLocaleString('sk-SK')} ‚Ç¨</td>
              <td><span class="badge success">Uhraden√°</span></td>
            </tr>
          `).join('');
        }
      } catch (err) {
        alert('Chyba: ' + err.message);
      }

      btn.disabled = false;
      btn.textContent = 'Naƒç√≠ta≈• fakt√∫ry';
    });

    // Email Marketing - Contacts
    let allContacts = [];
    let selectedContacts = [];

    document.getElementById('loadContacts')?.addEventListener('click', async function() {
      const btn = this;
      btn.disabled = true;
      btn.textContent = 'Naƒç√≠tavam...';

      try {
        const res = await fetch('/api/contacts/list', {
          headers: { 'Authorization': `Bearer ${adminPassword}` }
        });
        const data = await res.json();

        if (data.contacts) {
          allContacts = data.contacts;
          renderContacts(allContacts);
        }

        // Stats
        document.getElementById('emailStatTotal').textContent = data.contacts?.length || 0;
        document.getElementById('emailStatWorkshops').textContent = data.contacts?.filter(c => c.source === 'workshop').length || 0;
        document.getElementById('emailStatCampaigns').textContent = '12';
      } catch (err) {
        console.error(err);
      }

      btn.disabled = false;
      btn.textContent = 'Naƒç√≠ta≈•';
    });

    function renderContacts(contacts) {
      const tbody = document.getElementById('contactsBody');
      tbody.innerHTML = contacts.map(c => `
        <tr>
          <td><input type="checkbox" class="contact-cb" value="${c.email}" /></td>
          <td>${c.name || '-'}</td>
          <td>${c.email}</td>
          <td><span class="tagBadge blue">VIP</span></td>
          <td>${new Date(c.createdAt).toLocaleDateString('sk-SK')}</td>
          <td><button class="btn btn--ghost btn--small" onclick="deleteContact('${c.email}')">üóëÔ∏è</button></td>
        </tr>
      `).join('');

      document.querySelectorAll('.contact-cb').forEach(cb => {
        cb.addEventListener('change', updateSelection);
      });
    }

    function updateSelection() {
      selectedContacts = Array.from(document.querySelectorAll('.contact-cb:checked')).map(cb => cb.value);
      const bulk = document.getElementById('bulkActions');
      if (selectedContacts.length > 0) {
        bulk.style.display = 'block';
        document.getElementById('selectedContactsCount').textContent = selectedContacts.length;
      } else {
        bulk.style.display = 'none';
      }
    }

    document.getElementById('selectAllContacts')?.addEventListener('change', function() {
      document.querySelectorAll('.contact-cb').forEach(cb => cb.checked = this.checked);
      updateSelection();
    });

    // Import CSV
    document.getElementById('importCSVBtn')?.addEventListener('click', function() {
      const input = document.createElement('input');
      input.type = 'file';
      input.accept = '.csv';
      input.onchange = e => {
        const file = e.target.files[0];
        const reader = new FileReader();
        reader.onload = event => {
          const csv = event.target.result;
          const lines = csv.split('\n').filter(l => l.trim());
          alert(`Import ${lines.length - 1} kontaktov...`);
        };
        reader.readAsText(file);
      };
      input.click();
    });

    // Export CSV
    document.getElementById('exportCSVBtn')?.addEventListener('click', function() {
      if (allContacts.length === 0) return alert('Najprv naƒç√≠taj kontakty');

      const csv = [
        ['Meno', 'Email', 'D√°tum'],
        ...allContacts.map(c => [c.name || '', c.email, new Date(c.createdAt).toLocaleDateString('sk-SK')])
      ].map(row => row.join(',')).join('\n');

      const blob = new Blob([csv], { type: 'text/csv' });
      const url = URL.createObjectURL(blob);
