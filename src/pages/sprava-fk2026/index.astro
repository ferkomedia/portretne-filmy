    document.getElementById('searchContacts')?.addEventListener('input', filterContacts);
    document.getElementById('filterSource')?.addEventListener('change', filterContacts);
    document.getElementById('filterTag')?.addEventListener('change', filterContacts);

    function filterContacts() {
      const search = document.getElementById('searchContacts').value.toLowerCase();
      const source = document.getElementById('filterSource').value;
      const tag = document.getElementById('filterTag').value;

      const filtered = allContacts.filter(c => {
        const matchSearch = !search || c.name?.toLowerCase().includes(search) || c.email?.toLowerCase().includes(search);
        const matchSource = !source || c.source === source;
        const matchTag = !tag || (c.tags && c.tags.includes(tag));
        return matchSearch && matchSource && matchTag;
