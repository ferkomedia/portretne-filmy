    };

    window.generateHashtags = function() {
      const tags = ['#portretnefilmy', '#videomarketing', '#businessvideo'];
      if (socialPostText) {
        socialPostText.value += '\n\n' + tags.join(' ');
        socialPostText.dispatchEvent(new Event('input'));
      }
      alert('AI hashtagy pridan√©!');
    };
