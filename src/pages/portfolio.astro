---
import BaseLayout from "../layouts/BaseLayout.astro";
import YouTubeVideo from "../components/YouTubeVideo.astro";
import ImageGallery from "../components/ImageGallery.astro";
---

<BaseLayout title="Portfólio | Portrétny film" description="Ukážky portrétnych filmov a galéria.">
  <section class="hero">
    <div class="eyebrow">Portfólio</div>
    <h1>Ukážky prác</h1>
    <p class="lead">
      Portrétne filmy a fotografie z našich projektov. Kvalitné zábery a profesionálny prístup.
    </p>
    <div class="actions">
      <a class="btn btn--primary" href="/kontakt#objednat">Objednať film</a>
      <a class="btn btn--ghost" href="/sluzby">Služby</a>
    </div>
  </section>

  <section class="section">
    <h2>Videá</h2>
    <div class="grid3">
      <div>
        <h3>Video 1</h3>
        <YouTubeVideo videoId="M_yjxlFo7_s" title="Portrétny film 1" />
      </div>
      <div>
        <h3>Video 2</h3>
        <YouTubeVideo videoId="M_yjxlFo7_s" title="Portrétny film 2" />
      </div>
      <div>
        <h3>Video 3</h3>
        <YouTubeVideo videoId="M_yjxlFo7_s" title="Portrétny film 3" />
      </div>
    </div>
  </section>

  <section class="section">
    <h2>Fotky</h2>
    <ImageGallery
      images={[
        {
          src: "https://picsum.photos/400/300?random=1",
          alt: "Portrétny záber 1",
          title: "Projekt 1"
        },
        {
          src: "https://picsum.photos/400/300?random=2",
          alt: "Portrétny záber 2",
          title: "Projekt 2"
        },
        {
          src: "https://picsum.photos/400/300?random=3",
          alt: "Portrétny záber 3",
          title: "Projekt 3"
        },
        {
          src: "https://picsum.photos/400/300?random=4",
          alt: "Portrétny záber 4",
          title: "Projekt 4"
        },
        {
          src: "https://picsum.photos/400/300?random=5",
          alt: "Portrétny záber 5",
          title: "Projekt 5"
        },
        {
          src: "https://picsum.photos/400/300?random=6",
          alt: "Portrétny záber 6",
          title: "Projekt 6"
        },
      ]}
      columns={3}
    />
  </section>
</BaseLayout>