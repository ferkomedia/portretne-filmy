---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Kontakt | Portrétny film" description="Objednávka portrétneho filmu.">
  <h1>Objednávka portrétneho filmu</h1>

  <form name="portretny-film" method="POST" data-netlify="true" netlify-honeypot="bot-field" action="/dakujem">
    <input type="hidden" name="form-name" value="portretny-film" />
    <p style="display:none">
      <label>Nechaj prázdne: <input name="bot-field" /></label>
    </p>

    <div class="field">
      <label for="ico">IČO</label>
      <input id="ico" name="IČO" inputmode="numeric" placeholder="Zadajte IČO" />
      <div id="icoStatus" class="help"></div>
    </div>

    <!-- Hidden company fields -->
    <input type="hidden" name="Firma - názov" id="companyNameHidden" value="" />
    <input type="hidden" name="Firma - adresa" id="companyAddrHidden" value="" />
    <input type="hidden" name="Firma - DIČ" id="companyDicHidden" value="" />
    <input type="hidden" name="Firma - IČ DPH" id="companyIcdphHidden" value="" />
    <input type="hidden" name="Firma - ulica" id="companyStreetHidden" value="" />
    <input type="hidden" name="Firma - PSČ" id="companyPscHidden" value="" />
    <input type="hidden" name="Firma - mesto" id="companyCityHidden" value="" />
    <input type="hidden" name="Firma - právna forma" id="companyLegalFormHidden" value="" />
    <input type="hidden" name="Firma - SK NACE" id="companySkNaceHidden" value="" />

    <div class="grid2">
      <div class="field">
        <label>Meno a priezvisko</label>
        <input name="Meno a priezvisko" required placeholder="Napíšte svoje meno" />
      </div>
      <div class="field">
        <label>Email</label>
        <input name="Email" type="email" required placeholder="napr. meno@firma.sk" />
      </div>
    </div>

    <div class="grid2">
      <div class="field">
        <label>Telefón</label>
        <input name="Telefón" placeholder="+421…" />
      </div>
      <div class="field">
        <label>Typ portrétneho filmu</label>
        <select name="Typ portrétneho filmu" required>
          <option value="" selected disabled>Vyber formát</option>
          <option>Portrétny film „Osobnosť“</option>
          <option>Portrétny film „Životný príbeh“</option>
        </select>
      </div>
    </div>

    <div class="grid2">
      <div class="field">
        <label for="domain">Doména (.sk)</label>
        <input id="domain" name="Doména" placeholder="napr. mojadomena.sk" />
        <div id="domainStatus" class="help"></div>
      </div>
      <div class="field">
        <label>Správa</label>
        <textarea name="Správa" rows="5" required placeholder="Krátko opíšte dopyt…"></textarea>
      </div>
    </div>

    <input type="hidden" name="Doména - voľná" id="domainAvailableHidden" value="" />

    <label class="checkbox">
      <input type="checkbox" name="GDPR" required />
      Súhlasím so spracovaním osobných údajov za účelom vybavenia dopytu.
    </label>

    <button class="btn btn--primary" type="submit">Odoslať dopyt</button>
  </form>

  <script type="module" src="/src/scripts/enrich-forms.js"></script>
</BaseLayout>
