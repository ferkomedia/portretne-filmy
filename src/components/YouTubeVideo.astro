---
interface Props {
  videoId: string;
  title?: string;
  height?: string;
}

const { videoId, title = "YouTube video", height = "400px" } = Astro.props;
---

<div class="youtube-container" style={`height: ${height};`}>
  <iframe
    src={`https://www.youtube.com/embed/${videoId}`}
    title={title}
    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
    allowFullScreen
    loading="lazy"
  ></iframe>
</div>

<style>
  .youtube-container {
    position: relative;
    overflow: hidden;
    width: 100%;
  }

  iframe {
    width: 100%;
    height: 100%;
    border: none;
  }
</style>