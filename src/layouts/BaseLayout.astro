---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: "website" | "article" | "video.other";
  noindex?: boolean;
}

const {
  title = "Portrétny film",
  description = "Profesionálne portrétne filmy, ktoré zachytia vašu osobnosť a životný príbeh. Objednajte si portrétny film na mieru.",
  image = "/images/og-default.jpg",
  type = "website",
  noindex = false,
} = Astro.props;

const path = Astro.url.pathname;
const siteUrl = "https://portretnefilmy.sk";
const canonical = `${siteUrl}${path}`;
const ogImage = image.startsWith("http") ? image : `${siteUrl}${image}`;

const isActive = (href: string) => {
  if (href === "/") return path === "/";
  return path.startsWith(href);
};

const nav = [
  { href: "/", label: "Domov" },
  { href: "/sluzby", label: "Služby" },
  { href: "/cennik", label: "Cenník" },
  { href: "/portfolio", label: "Portfólio" },
  { href: "/workshopy", label: "Workshopy" },
  { href: "/kontakt", label: "Kontakt" },
];

// Schema.org JSON-LD
const schemaOrg = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "LocalBusiness",
      "@id": `${siteUrl}/#business`,
      name: "FerkoMedia - Portrétny film",
      description: description,
      url: siteUrl,
      logo: `${siteUrl}/favicon.png`,
      email: "info@ferkomedia.sk",
      address: {
        "@type": "PostalAddress",
        addressLocality: "Martin",
        addressCountry: "SK",
      },
      sameAs: [],
    },
    {
      "@type": "WebSite",
      "@id": `${siteUrl}/#website`,
      url: siteUrl,
      name: "Portrétny film",
      publisher: { "@id": `${siteUrl}/#business` },
      inLanguage: "sk",
    },
    {
      "@type": "WebPage",
      "@id": `${canonical}#webpage`,
      url: canonical,
      name: title,
      description: description,
      isPartOf: { "@id": `${siteUrl}/#website` },
      inLanguage: "sk",
    },
  ],
};
---
<!doctype html>
<html lang="sk">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />
    {noindex && <meta name="robots" content="noindex, nofollow" />}

    <!-- Favicon - inline SVG -->
    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><circle cx='50' cy='50' r='45' fill='%23111'/><circle cx='50' cy='50' r='28' fill='%23f97316'/></svg>" />
    <link rel="apple-touch-icon" sizes="180x180" href="/icons/icon-192.png" />
    <meta name="theme-color" content="#0a0a0a" />

    <!-- PWA -->
    <link rel="manifest" href="/manifest.json" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-title" content="Portrétne filmy" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonical} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:locale" content="sk_SK" />
    <meta property="og:site_name" content="Portrétny film" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonical} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Schema.org JSON-LD -->
    <script type="application/ld+json" set:html={JSON.stringify(schemaOrg)} />
  </head>

  <body>
    <header class="siteHeader">
      <div class="container">
        <nav class="nav" aria-label="Hlavné menu">
          <a class="brand" href="/">
            <span class="brandDot" aria-hidden="true"></span>
            <span class="brandText">Portrétny film</span>
          </a>

          <div class="navLinks">
            {nav.map((i) => (
              <a
                class={"navLink " + (isActive(i.href) ? "isActive" : "")}
                href={i.href}
                aria-current={isActive(i.href) ? "page" : undefined}
              >
                {i.label}
              </a>
            ))}
          </div>

          <div class="navCta">
            <a class="btn btn--primary" href="tel:+421949460832">0949 460 832</a>
          </div>

          <button class="hamburger" type="button" aria-label="Otvoriť menu" data-drawer-open>
            <span></span><span></span><span></span>
          </button>
        </nav>
      </div>
    </header>

    <!-- Mobile drawer -->
    <div class="drawerBackdrop" data-drawer-backdrop></div>
    <aside class="drawer" data-drawer aria-label="Mobilné menu">
      <div class="drawerHeader">
        <div style="display:flex;align-items:center;gap:10px;">
          <span class="brandDot" aria-hidden="true"></span>
          <strong style="color:rgba(255,255,255,.9)">Menu</strong>
        </div>
        <button class="drawerClose" type="button" aria-label="Zavrieť menu" data-drawer-close>×</button>
      </div>

      <div class="drawerLinks">
        {nav.map((i) => (
          <a class={isActive(i.href) ? "isActive" : ""} href={i.href}>
            {i.label}
          </a>
        ))}
      </div>

      <div class="drawerCtas">
        <a class="btn btn--primary" href="tel:+421949460832">0949 460 832</a>
        <a class="btn btn--ghost" href="/workshopy#rezervacia">Rezervovať workshop</a>
      </div>
    </aside>

    <style>
      .drawerBackdrop {
        display: none;
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.85);
        z-index: 998;
      }
      .drawerBackdrop.open {
        display: block;
      }
      .drawer {
        display: none;
        position: fixed;
        top: 0;
        right: 0;
        bottom: 0;
        width: min(300px, 80vw);
        background: #0a0a0a;
        z-index: 999;
        overflow-y: auto;
        border-left: 1px solid rgba(255, 255, 255, 0.15);
        flex-direction: column;
      }
      .drawer.open {
        display: flex;
      }
      .drawerHeader {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem 1.25rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        background: #0a0a0a;
      }
      .drawerClose {
        background: none;
        border: none;
        color: rgba(255, 255, 255, 0.6);
        font-size: 2rem;
        cursor: pointer;
        padding: 0;
        line-height: 1;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .drawerClose:hover {
        color: #fff;
      }
      .drawerLinks {
        padding: 1rem 0.75rem;
        background: #0a0a0a;
        flex: 1;
      }
      .drawerLinks a {
        display: block;
        padding: 0.875rem 1rem;
        font-size: 1rem;
        color: rgba(255, 255, 255, 0.8);
        border-radius: 10px;
        margin-bottom: 0.25rem;
        transition: all 0.2s;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.05);
      }
      .drawerLinks a:hover {
        background: rgba(255, 255, 255, 0.08);
        color: #fff;
      }
      .drawerLinks a.isActive {
        background: #f97316;
        color: #fff;
        border-color: #f97316;
      }
      .drawerCtas {
        padding: 1.25rem;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        background: #0a0a0a;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
      }
    </style>

    <main class="container">
      <slot />
    </main>

    <footer class="footer">
      <div class="container">
        <div class="footerInner">
          <div>© {new Date().getFullYear()} FerkoMedia</div>
          <div><a class="link" href="mailto:info@ferkomedia.sk">info@ferkomedia.sk</a></div>
        </div>
      </div>
    </footer>

    <script>
      (() => {
        const openBtn = document.querySelector("[data-drawer-open]");
        const closeBtn = document.querySelector("[data-drawer-close]");
        const drawer = document.querySelector("[data-drawer]");
        const backdrop = document.querySelector("[data-drawer-backdrop]");

        const open = () => {
          backdrop?.classList.add("open");
          drawer?.classList.add("open");
          document.body.style.overflow = "hidden";
        };
        const close = () => {
          backdrop?.classList.remove("open");
          drawer?.classList.remove("open");
          document.body.style.overflow = "";
        };

        openBtn?.addEventListener("click", open);
        closeBtn?.addEventListener("click", close);
        backdrop?.addEventListener("click", close);
        document.addEventListener("keydown", (e) => {
          if (e.key === "Escape") close();
        });
      })();
    </script>

    <!-- PWA Service Worker -->
    <script>
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register('/sw.js')
            .then(reg => console.log('SW registered'))
            .catch(err => console.log('SW registration failed:', err));
        });
      }
    </script>
  </body>
</html>
