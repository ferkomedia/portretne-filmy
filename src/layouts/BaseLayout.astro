---
interface Props {
  title?: string;
  description?: string;
  noindex?: boolean;
  ogImage?: string;
  canonicalURL?: string;
}

const { 
  title = "Portrétne filmy - Firemné a osobné video",
  description = "Profesionálne portrétne filmy pre firmy, osobnosti a eventy. Vytvárame autentické videá, ktoré oslovujú a zapamätajú sa.",
  noindex = false,
  ogImage = "/og-image.jpg",
  canonicalURL
} = Astro.props;

const fullTitle = title === "Portrétne filmy - Firemné a osobné video" ? title : `${title} | Portrétne filmy`;
const siteURL = "https://portretnefilmy.sk";
const canonical = canonicalURL || new URL(Astro.url.pathname, siteURL).href;
const ogImageURL = new URL(ogImage, siteURL).href;
---

<!doctype html>
<html lang="sk">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonical} />
    <meta name="generator" content={Astro.generator} />
    
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    {noindex && <meta name="robots" content="noindex, nofollow" />}
    
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:site_name" content="Portrétne filmy" />
    <meta property="og:locale" content="sk_SK" />
    
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonical} />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />
    
    <meta name="author" content="FerkoMedia" />
    <meta name="keywords" content="portrétne filmy, firemné video, korporátne video, video marketing, profesionálne video, Martin, Slovensko" />
    
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "VideoProductionService",
      "name": "Portrétne filmy",
      "description": "Profesionálne portrétne filmy pre firmy, osobnosti a eventy",
      "url": "https://portretnefilmy.sk",
      "logo": "https://portretnefilmy.sk/logo.png",
      "telephone": "+421949460832",
      "email": "info@ferkomedia.sk",
      "address": {
        "@type": "PostalAddress",
        "addressCountry": "SK",
        "addressLocality": "Martin"
      },
      "sameAs": [
        "https://www.facebook.com/ferkomedia",
        "https://www.instagram.com/ferkomedia"
      ],
      "offers": {
        "@type": "Offer",
        "category": "Video Production"
      }
    })} />
  </head>
  <body>
    <slot />
  </body>
</html>
